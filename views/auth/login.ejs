<%- include('../partials/header') %>

<div class="container mt-5" style="max-width: 400px;">
  <h1 class="title">Logga in</h1>

  <% if (typeof error !== 'undefined') { %>
    <div class="notification is-danger"><%= error %></div>
  <% } %>

  <form action="/auth/login" method="POST" class="box">
    <div class="field">
      <label class="label">Användarnamn</label>
      <div class="control">
        <input class="input" type="text" name="username" required>
      </div>
    </div>

    <div class="field">
      <label class="label">Lösenord</label>
      <div class="control">
        <input class="input" type="password" name="password" required>
      </div>
    </div>

    <div class="field">
      <button class="button is-link is-fullwidth">Logga in</button>
    </div>
  </form>

  <p>Har du inget konto? <a href="/auth/register">Registrera dig här</a>.</p>
</div>

<%- include('../partials/footer') %>
