<%- include('partials/header') %>

<div class="container mt-4">
  <h1 class="title">Recensioner</h1>

  <% if (user) { %>
    <form action="/reviews" method="POST" class="box">
      <div class="field">
        <label class="label">Namn</label>
        <div class="control">
          <input class="input" type="text" name="name" value="<%= user.username %>" readonly>
        </div>
      </div>
      <div class="field">
        <label class="label">Kommentar</label>
        <div class="control">
          <textarea class="textarea" name="comment" required></textarea>
        </div>
      </div>
      <button type="submit" class="button is-link">Skicka</button>
    </form>
  <% } else { %>
    <p><a href="/login">Logga in</a> f√∂r att skriva en recension.</p>
  <% } %>

  <% reviews.forEach(review => { %>
    <div class="box">
      <p><strong><%= review.name %></strong>:</p>
      <p><%= review.comment %></p>

      <% if (user && user.isAdmin) { %>
        <form action="/reviews/delete/<%= review._id %>" method="POST" class="mt-2">
          <button class="button is-small is-danger">Ta bort</button>
        </form>
      <% } %>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>
